<div class="profile_products">
    <h2>My products</h2>
    <% current_user.goods.each do |product| %>
    <div class='product-card'>
        <%= image(product) %>
        <div class="product">
            <%= link_to product.name , product_path(product.id) %>
            <span> Number of selles : <%= product.selletimes%> </span>
            <div class="buttom-card">
                <span><%= promotion(product) %> </span>
                <% if product.promotion > 0 %>
                <%= button_to  "remove promotion", product_path(product.id),:params => {product:{promotion: 0}} ,:method => :patch %>
                <% end %>
                <%= link_to  "edit product", edit_product_path(product.id) ,class: "editcard edit-item"  %>
            </div>
        </div>
    </div>
    <% end %>

</div>